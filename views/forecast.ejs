<%- include("partials/header")-%>
<!-- Five Day Forecast-->
<div class="topHead">
  <h1>5 Days Weather Forecast</h1>
  <form action="/forecast" method="post">
    <input type="text" name="City" placeholder="Search by City or Zip Code" autocomplete="off" class="form-control search-box">
    <button class="btn btn-default" type="submit">
      <i class="fas fa-search fa-lg"></i>
    </button>
  </form>
</div>

  <div id="five-day-box">
    <div class="five-day-row">
      <div class="row">
        <!-- Five Day Weather Cards-->
        <div class="col-1"></div>

        <!-- day 1 -->
        <div class="col-lg-2 col-md-12 col-sm-12 text-center">
          <div class="card">
            <div class="card-body">
              <h3><%= SendData.day1Date%></h3> <br>
              <h3><%= SendData.day1Temp%></h3>
              <img src="<%= SendData.day1Icon%>">
              <h4><%= SendData.day1Desc%></h4>
              <h4><%= SendData.day1Humidity %></h4>
              <h4><%= SendData.day1WindSpeed %></h4>
            </div>
          </div>
        </div>
        <!-- Day 2 -->
        <div class="col-lg-2 col-md-12 col-sm-12 text-center">
          <div class="card">
            <div class="card-body">
              <h3><%= SendData.day2Date%></h3> <br>
              <h3><%= SendData.day2Temp%></h3>
